{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rml.io/yarrrml/schema",
  "title": "YARRRML",
  "description": "A YARRRML document",
  "type": "object",
  "properties": {
    "prefixes": {
      "type": "object"
    },
    "sources": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "$ref": "#/$defs/source"
        }
      }
    },
    "mappings": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "properties": {
            "predicateobjects": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "predicates": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1
                  },
                  "objects": {
                    "type": "array",
                    "items": {
                      "anyOf": [
                        {
                          "description": "Support the generation of blank nodes as objects.",
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "blank"
                            },
                            "value": {
                              "type": "string"
                            }
                          },
                          "required": ["type"],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "value": {
                              "type": "string"
                            },
                            "type": {
                              "type": "string",
                              "not": {
                                "const":  "blank"
                              }
                            },
                            "datatype": {
                              "type": "string"
                            },
                            "language": {
                              "type": "string"
                            }
                          },
                          "required": ["value", "type"],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "mapping": {
                              "type": "string"
                            },
                            "conditions": {
                              "type": "array",
                              "items": {
                                "$ref": "#/$defs/function"
                              }
                            }
                          },
                          "required": ["mapping"],
                          "additionalProperties": false
                        },
                        {"$ref": "#/$defs/function"}
                      ]
                    },
                    "minItems": 1
                  }
                }
              }
            },
            "subjects": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {"$ref": "#/$defs/function"},
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "blank"
                      }
                    },
                    "required": ["type"]
                  }
                ]
              }
            },
            "sources": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/source"
              }
            }
          }
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  },
  "required": [
    "mappings"
  ],
  "$defs": {
    "function": {
      "type": "object",
      "properties": {
        "function": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "parameter": {
                "type": "string"
              },
              "value": {
                "anyOf": [{
                  "type": "string"
                }, {
                  "$ref": "#/$defs/function"
                }]
              },
              "type": {
                "type": "string"
              },
              "from": {
                "type": "string"
              }
            },
            "required": [
              "parameter",
              "value"
            ]
          }
        }
      },
      "required": ["function"]
    },
    "source": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "access": {
              "type": "string"
            },
            "referenceFormulation": {
              "type": "string"
            },
            "iterator": {
              "type": "string"
            }
          },
          "required": [
            "access",
            "referenceFormulation"
          ]
        },
        {
          "type": "object",
          "properties": {
            "table": {
              "type": "string"
            },
            "queryFormulation": {
              "type": "string"
            },
            "query": {
              "type": "string"
            }
          },
          "oneOf": [
            {
              "required": [
                "table"
              ]
            },
            {
              "required": [
                "query"
              ]
            }
          ]
        },
        {
          "type": "string"
        }
      ]
    }
  }
}
